{% extends 'base.html.twig' %}

{% block body %}

	<div class="album py-5 bg-light">
		<section class="jumbotron text-center">
			<div class="container">
				<h1>Liste des produits</h1>
				<p class="lead text-muted"></p>
					
			</div>
		</section>
		<div class="container">


			<div class="row">

				{% for product in products %}

					<div class="col-md-4">
						<div class="card mb-4 shadow-sm">
							{% if product.image %}
								<img class="card-img-top" src="uploads/images/products/{{ product.image }}"/>
							{% else %}
								<img class="card-img-top" src="https://via.placeholder.com/350x150"/>

							{% endif %}
							<div class="card-body">
								<h5>{{ product.name | slice(0,250)}}</h5>
								<p class="card-text">{{ product.description | slice(0,250)}}</p>
								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group">
										<button type="button" class="btn btn-sm btn-outline-secondary">
											<a href="{{ path('product',{id:product.id}) }}">View</a>
										</button>

									</div>
									<small class="text-muted">{{ product.price }}
										â‚¬</small>
								</div>
							</div>
						</div>
					</div>

				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}

{% block stylesheets %}{% endblock %}
